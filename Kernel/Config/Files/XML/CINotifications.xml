    <Setting Name="CINotifications::Priority" Required="0" Valid="1">
        <Description Translatable="1">Priority for tickets.</Description>
        <Navigation>Ticket</Navigation>
        <Value>
            <Item ValueType="String" ValueRegex="">3 normal</Item>
        </Value>
    </Setting>
    <Setting Name="CINotifications::State" Required="0" Valid="1">
        <Description Translatable="1">State for tickets.</Description>
        <Navigation>Ticket</Navigation>
        <Value>
            <Item ValueType="String" ValueRegex="">new</Item>
        </Value>
    </Setting>
    <Setting Name="CINotifications::Owner" Required="0" Valid="1">
        <Description Translatable="1">Owner for tickets.</Description>
        <Navigation>Ticket</Navigation>
        <Value>
            <Item ValueType="String" ValueRegex="">root@localhost</Item>
        </Value>
    </Setting>
    <Setting Name="CINotifications::UseCIOwnerAsCustomer" Required="0" Valid="1">
        <Description Translatable="1">If enabled, the owner of the CI will be set as customer of the ticket.</Description>
        <Navigation>Ticket</Navigation>
        <Value>
            <Item ValueType="Checkbox">0</Item>
        </Value>
    </Setting>
    <Setting Name="CINotifications::CIOwnerAttribute" Required="0" Valid="1">
        <Description Translatable="1">Attribute where the config item owner is stored.</Description>
        <Navigation>Ticket</Navigation>
        <Value>
            <Item ValueType="String" ValueRegex="">Owner</Item>
        </Value>
    </Setting>
    <Setting Name="CINotifications::CustomerDefault" Required="0" Valid="1">
        <Description Translatable="1">Default customer.</Description>
        <Navigation>Ticket</Navigation>
        <Value>
            <Item ValueType="String" ValueRegex="">root@localhost</Item>
        </Value>
    </Setting>
    <Setting Name="CINotifications::LinkType" Required="0" Valid="1">
        <Description Translatable="1">Link ticket and config item.</Description>
        <Navigation>Ticket</Navigation>
        <Value>
            <Item ValueType="String" ValueRegex="">RelevantTo</Item>
        </Value>
    </Setting>
    <Setting Name="CINotifications::IncidentState" Required="0" Valid="1">
        <Description Translatable="1">New incident state set by event module.</Description>
        <Navigation>SetIncidentState</Navigation>
        <Value>
            <Item ValueType="String" ValueRegex="">Incident</Item>
        </Value>
    </Setting>
    <Setting Name="Daemon::SchedulerCronTaskManager::Task###CINotifications" Required="0" Valid="1">
        <Description Translatable="1">Send notifications for config items.</Description>
        <Navigation>Daemon::SchedulerCronTaskManager::Task</Navigation>
        <Value>
            <Hash>
                <Item Key="TaskName">CINotifications</Item>
                <Item Key="Schedule">*/10 * * * *</Item> <!-- default: every 10 minutes -->
                <Item Key="Module">Kernel::System::Console::Command::Maint::ITSM::ConfigItem::SendNotifications</Item>
                <Item Key="Function">Execute</Item>
                <Item Key="MaximumParallelInstances">1</Item>
                <Item Key="Params">
                    <Array>
                    </Array>
                </Item>
            </Hash>
        </Value>
    </Setting>
    <Setting Name="Daemon::SchedulerCronTaskManager::Task###CINotificationsCron" Required="0" Valid="1">
        <Description Translatable="1">Send notifications for config items (cron based).</Description>
        <Navigation>Daemon::SchedulerCronTaskManager::Task</Navigation>
        <Value>
            <Hash>
                <Item Key="TaskName">CINotificationsCron</Item>
                <Item Key="Schedule">*/5 * * * *</Item> <!-- default: every 10 minutes -->
                <Item Key="Module">Kernel::System::Console::Command::Maint::ITSM::ConfigItem::CronNotifications</Item>
                <Item Key="Function">Execute</Item>
                <Item Key="MaximumParallelInstances">1</Item>
                <Item Key="Params">
                    <Array>
                    </Array>
                </Item>
            </Hash>
        </Value>
    </Setting>
</otrs_config>
